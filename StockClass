class Stock:
    def __init__(self, ticker, opening_price=0.0, current_price=0.0, time=0.0, tf_AM=0.0, tf_T=0.0, tf_peak=0.0,
                 tf_valley=0.0, shares_bought=0.0, buy_sell=0, bought_price=0.0):
        self.ticker = ticker
        self.opening_price = opening_price
        self.current_price = current_price
        self.time = time
        self.tf_AM = tf_AM
        self.tf_T = tf_T
        self.tf_peak = tf_peak
        self.tf_valley = tf_valley
        self.buy_sell = buy_sell
        self.shares_bought = shares_bought
        self.bought_price = bought_price
        self.peak = 0.0
        self.valley = 0.0
